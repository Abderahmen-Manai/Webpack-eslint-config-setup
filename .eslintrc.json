{
    "extends": ["airbnb", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "object-shorthand": "off",
      "class-methods-use-this": "off",
      "node/no-unpublished-require": ["off", {
        "convertPath": {
            "src/**/*.jsx": ["^src/(.+?)\\.jsx$", "lib/$1.js"]
        },
        "tryExtensions": [".js", ".jsx", ".json"]
    }]
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
  },
  "engines": {
    "node": ">=12.13.0"
}
  }